<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Room Lists</title>
    <link rel="stylesheet" href="../../css/style.css">
    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <script src="../../js/jquery-3.2.1.slim.min.js"></script>
    <script src="../../js/popper.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/sweetalert2.all.min.js"></script>
    <!-- Add any other necessary stylesheets -->
</head>

<body>
    <!-------------------------Menu Bar------------------------------------>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="#"><h1>ROOMMEETEE</h1></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a href="/index" class="nav-link">ROOM LISTS</a>
              </li>
              <li class="nav-item">
                <a href="/user/checking-requests" class="nav-link">CHECK REQUEST</a>
              </li>
              <li class="nav-item">
                <a href="/user/history" class="nav-link">HISTORY</a>
              </li>
              <li class="nav-item">
                <a href="/logout" class="nav-link">LOGOUT</a>
              </li>
            </ul>
            <span class="navbar-text">
              <span class="mr-3"><%= user.email %></span>
            </span>
          </div>
        </div>
    </nav>


    <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
        <div class="input-group search-bar">
            <input type="text" class="form-control" placeholder="Search Room Name .....">
            <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
        </div>
    </div>
    </div>
      

    <div class="container mt-3 table-responsive">
        <!---------------------create table---------------------------------->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center bg-dark text-white fs-4" id="">Picture</th>
                    <th class="text-start bg-dark text-white fs-4" id="">Room Name</th>
                    <th class="text-center bg-dark text-white fs-4" id="">Time Slot</th>
                    <th class="tex-start bg-dark text-white fs-4" id="">Status</th>
                </tr>
            </thead>
            <tbody>
                <% rooms.forEach(room => { %>
                <tr>
                    <td class="text-dark mx-4 text-center" id="Table1">
                        <img src="<%= room.image_path %>" alt="" width="350px" height="200px">
                    </td>
                    <td class="text-white mx-4 text-center" id="Table2">
                        <div class="text-start text-dark"> 
                            <h3><%= room.room_name %></h3>
                        </div>
                    </td>
             
                    <td class="border-0" id="Table3">
                        <div class="mt-2">
                            <% room.timeSlots.forEach(slot => { %>
                            <h5 class=" border-2 px-3 py-2"><%= slot.start_time %> - <%= slot.end_time %></h5>
                            <% }); %>
                        </div>
                    </td>
                    <td class="border-0">
                            <% room.timeSlots.forEach(slot => { %>
                            <div class="mt-2">
                                <% if (slot.status === "free") { %> 
                                    <button class="btn btn-success btn-md px-3 py-2 text-center">
                                        <a href="/booking/?roomId=<%= room.room_id %>&userId=<%= userId %>&slotId=<%= slot.slot_id %>" class="text-white px-3">
                                          <%= slot.status %>
                                        </a>
                                      </button>
                                <% } else if (slot.status === 'pending') { %>
                                    <button class="btn btn-secondary btn-md px-3 py-2 text-center"><%= slot.status %></button>
                                <% } else if (slot.status === 'reserved') { %>
                                    <button class="btn btn-warning btn-md px-3 py-2  text-center"><%= slot.status %></button>
                                <% } else if (slot.status === 'disabled') { %>
                                    <button class="btn btn-danger btn-md px-3 py-2 text-center"><%= slot.status %></button>
                                <% } %>
                            </div>
                            <% }); %>   
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
    </script>
</body>

</html>
