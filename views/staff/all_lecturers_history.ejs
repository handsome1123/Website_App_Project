<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer History</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <script src="../../js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https:
        //fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
        rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.33/dist/sweetalert2.all.min.js"></script>
</head>
<style>
    ul {
        display: flex;
        gap: 3rem;
        list-style: none;
        padding-bottom: 0%;
    }
    
    .navbar-brand {
        text-decoration: none;
        color: black;
        position: relative;
        transition: all 0.3s ease;
        padding-bottom: 0%;
    
    }
    
    .navbar {
        justify-content: center;
    }
    
    .navbar-brand:hover {
        color: #4c1b9a;
        padding-bottom: 0%;
    }
    
    .navbar-brand::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        background: #4c1b9a;
        border-radius: 5px;
        transform: scaleX(0);
        transition: all 0.6s ease;
        bottom: 0;
        left: 0;
        padding-bottom: 0px;
    }
    
    .navbar-brand:hover::before {
        transform: scaleX(1);
        padding-bottom: 0%;
    }
    
    .th {
        color: white;
        background-color: black;
    }
    
    #Logout {
        background: rgb(68, 43, 206);
        padding-left: 13px;
        font-size: 20px;
        color: white;
    }
    
    #Logout:hover {
        background: rgb(230, 63, 63);
        padding-left: 13px;
        font-size: 20px;
        color: white;
    }
    
    .rainbow-text {
        background-image: linear-gradient(to right, #2B27A4,#4c1b9a,#90279B);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        /* For Safari */
       
    }
    
    
    #History {
    
    
        color: #4c1b9a;
        text-decoration: none;
    
        cursor: not-allowed;
    
    
    
    
    }
    
    @media (max-width: 767px) {
        .navbar-brand {
            font-size: 17px;
            /* Decrease font size */
        }
    }
    
    /* For medium devices (e.g., tablets) */
    @media (min-width: 768px) and (max-width: 991px) {
        .navbar-brand {
            font-size: 20px;
            /* Adjust font size */
        }
    }
    
    /* For large devices (e.g., desktops) */
    @media (min-width: 992px) {
        .navbar-brand {
            font-size: 28px;
            /* Default font size */
        }
    }
    nav{
        background: linear-gradient(to right, #ffffff,#9DA2AE);
      }
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light pt-4 sticky-top">
        <ul>
            <li>
                <h1 class="rainbow-text">Roommeetee</h1>
            </li>
            <li><a href="/staff/room-lists" class="navbar-brand float-end" id="Roomlist">Room list</a></li>
            <li><a href="/staff/dashboard" class="navbar-brand float-end" id="Dashboard">Dashboard</a></li>
            <li><a href="/staff/all-lecturers-history" class="navbar-brand float-end" id="History">History</a></li>
            <li><a href="/logout" class=" navbar-brand float-end ">Logout</a></li>
            <li><p><%= user.email %></p></li>
        </ul>
    </nav>
    <div class=" mt-2">
        <!-- Date row -->
        <div class="row mb-3">
            <div>
                <h2 class="text-center">Your History</h2>
            </div>
        </div>    

        <!-- Table -->
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-white bg-dark" >Room Name</th>
                    <th scope="col"class="text-white bg-dark">Date</th>
                    <th scope="col"class="text-white bg-dark">Time</th>
                    <th scope="col"class="text-white bg-dark">Time Slot</th>
                    <th scope="col"class="text-white bg-dark">Student Name</th>
                    <th scope="col"class="text-white bg-dark">Lecturer Name</th>
                    <th scope="col"class="text-white bg-dark">Action</th>
                </tr>
            </thead>
            <tbody>
                <% allLecHistory.forEach(booking => { %>
                  <tr>
                    <td><%= booking.room_name %></td>
                  <td><%= booking.booked_at.toDateString() %></td> <!--Date only-->
                  <td><%= booking.start_time %> - <%= booking.end_time %></td> <!--Time only-->
                  <td><%= booking.slot_id %></td>
                  <td><%= booking.student_name %></td>
                  <td><%= booking.lecturer_name %></td> <!-- Assuming student_name is retrieved from the database -->
                    <td><%= booking.status %></td>
                  </tr>
                <% }); %>
              </tbody>
        </table>
    </div>
    <script>
        document.querySelector('#Logout').onclick = function () {
            Swal.fire({

                title: "Do You Want To Log-Out",
                showCancelButton: true,
                confirmButtonText: "Log-Out",

            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    window.location.href = "Login.html"
                } else if (result.isDenied) {
                    Swal.fire("Changes are not saved", "", "info");
                }
            });
        };

       
        
    </script>
</body>

</html>