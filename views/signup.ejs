<body>
  <!-------------------------  Menu bar                     ------------------------------>
  <nav class="navbar navbar-expand-lg navbar-light bg-light pt-4 shadow sticky-top">
    <ul>
      <li>
        <h1 class="rainbow-text">Roommeetee</h1>
      </li>
    </ul>
  </nav>

  <div id="main">
    <!-------------------------  Create new account      ------------------------------>
    <div class="wrapper">
      <form action="/signup" method="post">
        <% if(message.length> 0) { %>
          <div class="alert alert-primary">
            <%= message %>
          </div>
          <% } %>
            <h2 class="text-white">Create New Account</h2>
            <div class="input-field mx-4">
              <input type="text" name="username" required>
              <label>Enter Your Name</label>
            </div>
            <!------------    Enter  you mail          ------------------------->
            <div class="input-field mx-4">
              <input type="email" name="email" required>
              <label>Enter your mail</label>
            </div>
            <!------------    Enter  you Password          ------------------------->
            <div class="input-field mx-4">
              <input type="password" name="password" required>
              <label>Enter Your Password</label>
            </div>
            <div class="forget">
              <div class="check-input">
                <label for="remember">
                  <input type="checkbox" id="remember">
                  <p>Remember me</p>
                </label>
              </div>
            </div>
            <button type="submit" class="btn " id="Register">Register</button>
            <div class="mt-3 text-white">
              <a href="/">
                <p>I already have account</p>
              </a>
            </div>
      </form>
    </div>
  </div>
</body>
<script>

